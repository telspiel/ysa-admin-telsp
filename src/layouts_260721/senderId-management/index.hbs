<div class="pcoded-main-container">
  <div class="pcoded-content">
    <!-- [ Main Content ] start -->
    <div class="p-0">
      <div class="p-0 contant-holder">
        <!-- contant holder start -->
        <h3 class="main-head-3">Sender Id Management</h3>
        <!-- contant holder end -->
        <div class="col-md-12 pt-2 pb-5">
          <main class="px-4 py-3">
            <div id="alert-box" class="alert-box"></div>
            <nav>
              <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="add-senderId-tab" data-toggle="tab" href="#add" role="tab"
                  aria-controls="add" aria-selected="true">Add</a>
                <a class="nav-item nav-link" id="approve-senderId-tab" data-toggle="tab" href="#approve" role="tab"
                  aria-controls="approve" aria-selected="false">Approved Sender ID</a>
                <a class="nav-item nav-link" id="pending-senderId-tab" data-toggle="tab" href="#pending" role="tab"
                  aria-controls="pending" aria-selected="false">Pending For Approval</a>
              </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
              <div class="tab-pane fade show active" id="add" role="tabpanel" aria-labelledby="nav-home-tab">
                <div id="add-senderId-form" class="senderId-form frm-border">
                  <br>
                  <br>
                  <form id="add-senderId" action="#" method="post" autocomplete="off">

                    {{!-- <div class="row">
                      <div class="form-group col-md-3 col-sm-6">
                        <label for="userName" class="col-form-label"><b>Choose User</b></label>
                        <input type="text" class="form-control dropdown userName" id="userName" name="userName" value=""
                          placeholder="User Name" required>
                      </div>
                    </div> --}}

                    <div class="row">
                      <div class="form-group col-md-3">
                        <label for="userName" class="col-form-label"><b>Choose User</b></label>
                      </div>
                      <div class=" col-md-4">
                        <select class="form-control select2 userName" id="userName" name="userId">
                        </select>
                      </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-3">
                          <label for="message_type">Sender ID type</label>
                        </div>
                        <div class="col-md-9 ">
                          <div class="row">
                            <div class=" col-md-3 custom-control custom-radio ">
                            <input class="custom-control-input" type="radio" name="senderIdType" value="promo" id="msgType-1"
                              title="Sender ID type" checked="checked">
                            <label class="custom-control-label" for="msgType-1">Promotional</label>
                          </div>
                          <div class=" col-md-6 custom-control custom-radio ">
                            <input class="custom-control-input" type="radio" name="senderIdType" value="others" id="msgType-2"
                              title="Sender ID type"> <label class="custom-control-label" for="msgType-2">Others(Transactional/Service Implicit/Service Explicit)</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="form-group col-md-3">
                        <label for="senderId" class="col-form-label">Sender Id</label>
                      </div>
                      <div class="col-md-4">
                        <input type="text" class="form-control" id="senderId" name="senderId" value=""
                          placeholder="Sender Id" required pattern="^[a-zA-Z]{6}|[0-9]{6}$" maxlength="6">
                      </div>

                    </div>
                    <div class="row">
                    <div class="col-md-3">
                      <div class="form-group">
                        <div class="form-group">
                          <label for="txt-from">Entity ID</label>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <input type="number" class="form-control" id="addentityid"
                          placeholder="Add Entity ID" aria-describedby="add-entity-id" pattern="[0-9]" >
                      </div>
                    </div>
                    </div>
                    <div class="row">
                    <div class="col-md-3">
                      <div class="form-group">
                        <div class="form-group">
                          <label for="txt-from">Header ID</label>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <input type="number" class="form-control" id="headerid"
                          placeholder="Add Header ID" aria-describedby="add-header-id" pattern="[0-9]">
                      </div>
                    </div>
                    </div>
                    <div class="form-group row">
                      <label for="defaultSenderId-0" class="col-sm-3 col-form-label">Default</label>
                      <div class="col-sm-9">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="isDefault" value="Y" id="defaultSenderId-0"
                            title="Default SenderId" > <label class="form-check-label"
                            for="defaultSenderId-0">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="isDefault" value="N" id="defaultSenderId-1"
                            title="Default SenderId" checked="checked"> <label class="form-check-label" for="defaultSenderId-1">No</label>
                        </div>
                      </div>
                    </div>
                    <div class="form-group row">
                      <label for="defaultSenderId-0" class="col-sm-3 col-form-label">Active</label>
                      <div class="col-sm-9">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="isActive" value="Y" id="activeSenderId-0"
                            title="Active SenderId" checked="checked"> <label class="form-check-label"
                            for="activeSenderId-0">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="isActive" value="N" id="activeSenderId-1"
                            title="Active SenderId" > <label class="form-check-label" for="activeSenderId-1">No</label>
                        </div>
                      </div>
                    </div>
                    <div class="form-group row">
                      <label for="defaultSenderId-0" class=" col-md-3 col-form-label">Non DND Number
                        Allowed</label>
                      <div class="col-sm-9">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="isNonDndNumberAllowed" value="Y"
                            id="isNonDndNumberAllowed-0" title="Active SenderId" > <label
                            class="form-check-label" for="isNonDndNumberAllowed-0">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="isNonDndNumberAllowed" value="N"
                            id="isNonDndNumberAllowed-1" title="Active SenderId" checked="checked"> <label class="form-check-label"
                            for="isNonDndNumberAllowed-1">No</label>
                        </div>
                      </div>
                    </div>
                    <div class="text-center">
                      <input type="submit" value="Submit" class="btn btn-success" />
                      <input type="reset" value="Reset" class="btn btn-danger" />
                    </div>
                  </form>
                </div>
              </div>
              <div class="tab-pane fade" id="approve" role="tabpanel" aria-labelledby="nav-profile-tab">
                <br>
                <br>
                {{!-- <div class="row"> --}}
                <table id="senderIDTable" class="table table-striped table-sm table-bordered dt-responsive nowrap"
                  style="width:100%"></table>
                {{!-- </div> --}}

              </div>
              <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="nav-profile-tab">
                <br>
                <br>
                <table id="pendingApprovalTable"
                  class="table table-striped table-sm table-bordered dt-responsive nowrap" style="width:100%"></table>
              </div>

            </div>
          </main>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="editSenderId">
            <div class="float-left"><b>Sender ID : </b><span id="senderId"></span></div>
            <div class="float-right"><b>Username : </b><span id="userName"></span></div>
            <div class="d-none" id="idOfSenderId"></div>
            <br />
            <br />
            <div class="row">
              <div class="col-md-3 isActive">
                <label for="isActive">isActive</label>
                <select type="text" class="form-control" name="isActive" id="isActive">
                  <option value="Y">Y</option>
                  <option value="N">N</option>
                </select>
              </div>

              <div class="col-md-3 isDefault">
                <label for="isDefault">isDefault</label>
                <select type="text" class="form-control" name="isDefault" id="isDefault">
                  <option value="Y">Y</option>
                  <option value="N">N</option>
                </select>
              </div>

              <div class="col-md-3 isNonDndNumberAllowed">
                <label for="isNonDndNumberAllowed">isNonDndNumberAllowed</label>
                <select type="text" class="form-control" name="isNonDndNumberAllowed" id="isNonDndNumberAllowed">
                  <option value="Y">Y</option>
                  <option value="N">N</option>
                </select>
              </div>
            </div>
            <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <div class="form-group">
                  <label for="txt-from">Entity ID</label>
                  <input type="number" class="form-control" id="updateEntityid"
                    placeholder="Add Entity ID" aria-describedby="add-entity-id" pattern="[0-9]">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="txt-from">Header ID</label>
                <input type="number" class="form-control" id="updateHeaderid"
                  placeholder="Add Header ID" aria-describedby="add-header-id" pattern="[0-9]">
              </div>
            </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="update" data-dismiss="modal">Update</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


