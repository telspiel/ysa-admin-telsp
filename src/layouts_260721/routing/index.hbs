<!-- [ Main Content ] start -->
<div class="pcoded-main-container">
  <div class="pcoded-content">
    <!-- [ Main Content ] start -->
    <div class="p-0">
      <div class="p-0 contant-holder">
        <!-- contant holder start -->
        <h3 class="main-head-3">Routing</h3>
        <!-- contant holder end -->
        <div class="col-md-12 pt-2 pb-5">

          <div class="col-md-12 p-0">
            <main class="px-4 py-3">

              <br />
              <div class="frm-border">
                <form id="view-routing-form" action="#" autocomplete="off">
                  <div class="row">
                    <div class="col-md-3 adminNameDiv">
                      <label for="adminName">Select Admin</label>
                        <select  id="adminName" data-name="admin" class="form-control   dropdown  adminName"
                         name="adminName">
                          <option value="">-- Select --</option>
                        </select>
                    </div>
                    <div class="col-md-3 resellerNameDiv">
                      <label for="resellerName">Select Reseller</label>
                      <select type="text" data-name="reseller" class="form-control dropdown resellerName"
                        name="resellerName">
                        <option value="">-- Select --</option>
                      </select>
                    </div>

                    <div class="col-md-3 sellerNameDiv">
                      <label for="sellerName">Select Seller</label>
                      <select type="text" data-name="seller" class="form-control dropdown sellerName" name="sellerName">
                        <option value="">-- Select --</option>
                      </select>
                    </div>

                    <div class="col-md-3 clientNameDiv">
                      <label for="clientName">Select Client</label>
                      <select type="text" data-name="client" class="form-control dropdown clientName" name="clientName">
                        <option value="">-- Select --</option>
                      </select>
                    </div>

                    <div class="col-md-3">
                      <div class="form-group mt-4 pt-2">
                        <button type="button" id="btnSubmit" class="btn btn-primary">Submit</button>
                          <input type="reset" id="resetButton" value="Reset" class="btn btn-danger" />
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div id="routingTableView"></div>
                <table id="example1" class="table table-striped table-sm table-bordered dt-responsive nowrap" style="width:100%">
              </table>
            </main>
          </div>

          </main>
        </div>
      </div>
      <!-- [ Main Content ] end -->
    </div>

  </div>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Routing</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="circleoperatorDropdown">
            <div><b>Routing Type : </b><span id="routingTypeData"></span></div>
            <br />
            <div class="row">
              <div class="col-md-3 circleDiv">
                <label for="circleDiv"><strong>Circle</strong><span id="circleLabel"></span></label>
                <select type="text" class="form-control  circle" name="circle" id="circle">
                  <option value="">-- Select --</option>
                </select>
              </div>

              <div class="col-md-3 operatorDiv">
                <label for="operator"><strong>Operator</strong><span id="operatorLabel"></span> </label>
                <select type="text" class="form-control  operator" name="operator" id="operator">
                  <option value="">-- Select --</option>
                </select>
              </div>

              <div class="col-md-3 senderIdDiv">
                <label for="senderId"><strong>Sender Id</strong><span id="senderIdLabel"></span></label>
                <select type="text" class="form-control  senderId" name="senderId" id="senderId">
                  <option value="">-- Select --</option>
                </select>
              </div>

              <div class="col-md-3 groupDiv">
                <label for="group"><strong>Group</strong><span id="groupLabel"></span></label>
                <select type="text" class="form-control  group" name="group" id="group">
                  <option value="">-- Select --</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="update" data-dismiss="modal">Update</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

